name: Continuous Integration

on:
  pull_request:
    types: [edited]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Check out repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.10'

      - name: Linter
        uses: advanced-security/python-lint-code-scanning-action@v1
        with:
          linter: flake8
